{
  "version": "1.0.0",
  "name": "production-project",
  "description": "Production-optimized PRP configuration with security and performance focus",
  "author": "Production Team",
  "license": "MIT",
  "type": "cli",
  "storage": {
    "dataDir": ".prp",
    "cacheDir": "/var/cache/prp",
    "worktreesDir": "/tmp/prp-worktrees",
    "notesDir": ".prp/notes",
    "logsDir": "/var/log/prp",
    "keychainFile": ".prp/keychain.json",
    "persistFile": ".prp/state.json",
    "maxCacheSize": 52428800,
    "retentionPeriod": 7776000000
  },
  "agents": [
    {
      "id": "claude-code-anthropic-prod",
      "name": "Claude Code Production",
      "type": "claude-code-anthropic",
      "role": "orchestrator-agent",
      "provider": "anthropic",
      "enabled": true,
      "capabilities": {
        "supportsTools": true,
        "supportsImages": false,
        "supportsSubAgents": true,
        "supportsParallel": false,
        "supportsCodeExecution": false,
        "maxContextLength": 100000,
        "supportedModels": ["claude-3-5-sonnet-20241022"],
        "supportedFileTypes": ["ts", "js", "json", "md", "yml", "yaml"],
        "canAccessInternet": false,
        "canAccessFileSystem": true,
        "canExecuteCommands": false
      },
      "limits": {
        "maxTokensPerRequest": 50000,
        "maxRequestsPerHour": 20,
        "maxRequestsPerDay": 200,
        "maxCostPerDay": 25,
        "maxExecutionTime": 300000,
        "maxMemoryUsage": 1024,
        "maxConcurrentTasks": 2,
        "cooldownPeriod": 5000
      },
      "authentication": {
        "type": "api-key",
        "credentials": {
          "apiKey": "${ANTHROPIC_API_KEY}"
        },
        "encrypted": true
      },
      "personality": {
        "tone": "professional",
        "language": "en",
        "responseStyle": "concise",
        "verbosity": "minimal",
        "creativity": 0.3,
        "strictness": 0.9,
        "proactivity": 0.2,
        "customInstructions": "You are a production-focused assistant. Prioritize security, performance, and maintainability. Provide concise, production-ready solutions.",
        "communicationStyle": {
          "useEmojis": false,
          "useFormatting": true,
          "includeCodeBlocks": true,
          "includeExplanations": false
        }
      },
      "tools": [],
      "environment": {
        "workingDirectory": "/app",
        "shell": "/bin/bash",
        "envVars": {
          "NODE_ENV": "production",
          "DEBUG": ""
        },
        "nodeVersion": "20",
        "pythonVersion": "3.11",
        "allowedCommands": ["git", "npm", "node"],
        "blockedCommands": ["rm", "sudo", "chmod", "docker", "yarn", "pnpm"],
        "networkAccess": {
          "allowedDomains": ["api.github.com", "registry.npmjs.org"],
          "blockedDomains": ["*"],
          "allowExternalRequests": false
        },
        "fileSystem": {
          "allowedPaths": ["/app/src", "/app/dist", "/app/tests"],
          "blockedPaths": ["/etc", "/usr/bin", "/bin", "/root", "/app/.prp/keychain.json"],
          "maxFileSize": 10485760,
          "allowWrite": false,
          "allowDelete": false
        }
      },
      "preferences": {
        "autoSave": false,
        "autoCommit": false,
        "preferAsync": true,
        "useCache": true,
        "debugMode": false,
        "logLevel": "error",
        "notifications": {
          "enabled": true,
          "types": ["error"],
          "channels": ["console"]
        },
        "git": {
          "autoStage": false,
          "commitMessageFormat": "fix: {description}",
          "branchNaming": "hotfix/{name}"
        }
      },
      "metadata": {
        "version": "1.0.0",
        "author": "system",
        "createdAt": "2025-11-05T00:00:00.000Z",
        "lastModified": "2025-11-05T00:00:00.000Z",
        "tags": ["production", "anthropic", "claude", "orchestrator", "security"],
        "category": "ai-assistant",
        "description": "Production-optimized Claude agent with security and performance focus",
        "documentation": "Configured for production environments with strict security controls and optimized performance.",
        "examples": [],
        "dependencies": [],
        "compatibility": {
          "platforms": ["linux"],
          "nodeVersions": ["18", "20"],
          "pythonVersions": ["3.11"]
        }
      }
    }
  ],
  "guidelines": [],
  "signals": {},
  "orchestrator": {},
  "scanner": {},
  "inspector": {},
  "tui": {
    "mode": "cli",
    "activeScreen": "main",
    "followEvents": false,
    "autoRefresh": false,
    "refreshInterval": 10000
  },
  "features": {
    "scanner": true,
    "inspector": true,
    "orchestrator": true,
    "tui": false,
    "mcp": false,
    "worktrees": true
  },
  "limits": {
    "maxConcurrentAgents": 2,
    "maxWorktrees": 5,
    "maxPRPsPerWorktree": 3,
    "tokenAlertThreshold": 0.8,
    "tokenCriticalThreshold": 0.95
  },
  "logging": {
    "level": "error",
    "enableFileLogging": true,
    "enableTokenTracking": true,
    "enablePerformanceTracking": true,
    "logRetentionDays": 30
  },
  "security": {
    "enablePinProtection": true,
    "encryptSecrets": true,
    "sessionTimeout": 1800
  },
  "settings": {
    "debug": {
      "enabled": false,
      "level": "error",
      "console": false,
      "file": true,
      "timestamp": true,
      "colors": false,
      "profiling": false
    },
    "quality": {
      "linting": {
        "enabled": true,
        "rules": {
          "no-console": "error",
          "no-debugger": "error",
          "prefer-const": "error"
        },
        "fixOnSave": true
      },
      "testing": {
        "enabled": true,
        "coverage": 95,
        "frameworks": ["jest"]
      },
      "security": {
        "enabled": true,
        "tools": ["npm-audit", "eslint-security", "snyk"],
        "rules": {
          "no-eval": "error",
          "no-implied-eval": "error",
          "no-new-func": "error"
        }
      },
      "performance": {
        "enabled": true,
        "thresholds": {
          "loadTime": 1000,
          "bundleSize": 250000
        }
      }
    },
    "build": {
      "tool": "tsc",
      "optimization": true,
      "minification": true,
      "sourceMap": false,
      "target": ["es2020"],
      "output": {
        "directory": "dist",
        "filename": "index.js",
        "format": ["cjs"]
      }
    },
    "test": {
      "framework": "jest",
      "coverage": {
        "enabled": true,
        "threshold": 95,
        "reporters": ["text", "lcov"]
      },
      "environment": "node",
      "setupFiles": ["./tests/setup.prod.ts"],
      "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"]
    },
    "ci": {
      "platform": "github",
      "workflows": {
        "build": true,
        "test": true,
        "deploy": true,
        "security": true
      },
      "triggers": {
        "onPush": true,
        "onPR": false,
        "onSchedule": true
      },
      "environment": {
        "NODE_ENV": "production",
        "CI": "true"
      }
    },
    "development": {
      "watch": false,
      "hotReload": false,
      "port": 8080,
      "host": "0.0.0.0",
      "proxy": {},
      "server": "nginx"
    },
    "packageManager": {
      "manager": "npm",
      "autoInstall": false,
      "scripts": {
        "build": "prp build",
        "test": "prp test",
        "lint": "prp lint",
        "security": "npm audit",
        "start": "node dist/index.js"
      },
      "dependencies": {},
      "devDependencies": {}
    }
  },
  "scripts": {
    "build": "prp build",
    "test": "prp test",
    "lint": "prp lint",
    "security": "npm audit",
    "start": "node dist/index.js",
    "clean": "prp clean"
  }
}