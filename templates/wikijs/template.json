{
  "name": "wikijs",
  "description": "Wiki.js with PostgreSQL for collaborative documentation",
  "default": false,
  "files": [
    {
      "path": "docker-compose.yml",
      "type": "default",
      "description": "Docker Compose configuration for Wiki.js and PostgreSQL"
    },
    {
      "path": "config.yml",
      "type": "default",
      "description": "Wiki.js configuration file"
    },
    {
      "path": "package.json",
      "type": "default",
      "description": "Node.js package configuration"
    },
    {
      "path": "README.md",
      "type": "default",
      "description": "Wiki.js setup and usage documentation"
    },
    {
      "path": ".env.example",
      "type": "optional",
      "description": "Environment variables template",
      "condition": "enableEnvFile"
    },
    {
      "path": "backup.sh",
      "type": "optional",
      "description": "Database backup script",
      "condition": "enableBackup"
    }
  ]
}