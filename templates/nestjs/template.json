{
  "name": "nestjs",
  "description": "NestJS TypeScript application with modern architecture",
  "default": false,
  "files": [
    {
      "path": "src/main.ts",
      "type": "default",
      "description": "NestJS application entry point"
    },
    {
      "path": "src/app.module.ts",
      "type": "default",
      "description": "Root application module"
    },
    {
      "path": "src/app.controller.ts",
      "type": "default",
      "description": "Main application controller"
    },
    {
      "path": "src/app.service.ts",
      "type": "default",
      "description": "Main application service"
    },
    {
      "path": "src/app.controller.spec.ts",
      "type": "default",
      "description": "Controller unit tests"
    },
    {
      "path": "src/app.service.spec.ts",
      "type": "default",
      "description": "Service unit tests"
    },
    {
      "path": "package.json",
      "type": "default",
      "description": "Package configuration with NestJS dependencies"
    },
    {
      "path": "tsconfig.json",
      "type": "default",
      "description": "TypeScript configuration"
    },
    {
      "path": "nest-cli.json",
      "type": "default",
      "description": "NestJS CLI configuration"
    },
    {
      "path": "README.md",
      "type": "default",
      "description": "NestJS project documentation"
    },
    {
      "path": ".eslintrc.js",
      "type": "optional",
      "description": "ESLint configuration",
      "condition": "enableLinting"
    },
    {
      "path": ".prettierrc",
      "type": "optional",
      "description": "Prettier configuration",
      "condition": "enablePrettier"
    }
  ]
}