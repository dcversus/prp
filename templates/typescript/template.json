{
  "name": "typescript",
  "description": "TypeScript project with modern tooling and best practices",
  "default": false,
  "files": [
    {
      "path": "src/index.ts",
      "type": "default",
      "description": "Main TypeScript entry point"
    },
    {
      "path": "package.json",
      "type": "default",
      "description": "Package configuration with TypeScript dependencies"
    },
    {
      "path": "tsconfig.json",
      "type": "default",
      "description": "TypeScript compiler configuration"
    },
    {
      "path": "README.md",
      "type": "default",
      "description": "TypeScript project documentation"
    },
    {
      "path": ".gitignore",
      "type": "default",
      "description": "Git ignore file for Node.js projects"
    },
    {
      "path": ".eslintrc.json",
      "type": "optional",
      "description": "ESLint configuration",
      "condition": "enableLinting"
    },
    {
      "path": ".prettierrc",
      "type": "optional",
      "description": "Prettier configuration",
      "condition": "enablePrettier"
    },
    {
      "path": "jest.config.js",
      "type": "optional",
      "description": "Jest testing configuration",
      "condition": "enableTesting"
    }
  ]
}